@model IEnumerable<VetClinicAPI.Models.PetProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="PetProfiles">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VetNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VetNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="PetProfiles" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="PetProfiles" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="PetProfiles" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
